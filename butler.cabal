    , scientific
    , text
    , text-rope
    , time
    , typed-process
    , unix
    , unliftio
    , uuid
    , xstatic-hyperscript
    , xstatic-novnc
    , xstatic-otjs
    , xstatic-pcm-player
    , xstatic-pdfjs
    , xstatic-quill
    , xstatic-quill-cursors
    , xstatic-remixicon
    , xstatic-sweetalert2
    , xstatic-winbox
    , xstatic-xterm

executable butler
  import:         common, executable
  hs-source-dirs: source/application
  main-is:        Main.hs
  build-depends:  butler-desktop

test-suite spec
  import:             common, executable
  hs-source-dirs:     source/test-suite
  type:               exitcode-stdio-1.0
  main-is:            Driver.hs
  other-modules:
    Butler.App.ClockTest
    Butler.App.NoterTest
    Butler.Core.ClockTest
    Butler.Core.HistoryTest
    Butler.Core.LoggerTest
    Butler.Core.MemoryTest
    Butler.Core.ProcessorTest
    Butler.Session

  build-tool-depends: tasty-discover:tasty-discover
  build-depends:
    , butler
    , butler-desktop
    , hspec-expectations
    , tasty
    , tasty-hunit
